<script runat="server">
Platform.Load("Core", "1.1");

var fileName = "your-file.csv";
var folderPath = "/Import"; // Use "/" for root if unsure
var fileExists = false;

try {
    var fileList = Platform.Function.File.List(folderPath);

    if (fileList && fileList.length > 0) {
        for (var i = 0; i < fileList.length; i++) {
            if (fileList[i].Name == fileName) {
                fileExists = true;
                break;
            }
        }
    }

    Write("File exists: " + fileExists);
} catch (e) {
    Write("⚠️ Error: " + Stringify(e));
}
</script>