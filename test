<script runat="server">
    Platform.Load("Core", "1.1");
    
    var fileName = "your-file-name.csv"; // Replace with your dynamic filename
    var ftpFolder = "/Import"; // Adjust to your FTP directory
    var fullPath = ftpFolder + "/" + fileName;
    
    try {
        var file = Platform.Function.File;
        var fileList = file.List(ftpFolder);
    
        var fileExists = false;
        for (var i = 0; i < fileList.length; i++) {
            if (fileList[i].Name == fileName) {
                fileExists = true;
                break;
            }
        }
    
        if (fileExists) {
            Write("✅ File exists: " + fullPath);
        } else {
            Write("❌ File not found: " + fullPath);
        }
    } catch (e) {
        Write("⚠️ Error checking FTP: " + Stringify(e));
    }
    </script>