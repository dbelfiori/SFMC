<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Tabbed Navigation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            display: flex;
        }
        nav {
            width: 200px;
            padding: 20px;
            background: #f4f4f4;
        }
        ul {
            list-style: none;
            padding: 0;
        }
        li {
            margin: 10px 0;
        }
        a {
            text-decoration: none;
            color: #333;
            cursor: pointer;
        }
        .content {
            display: none; /* Hide all content sections initially */
            flex-grow: 1;
            padding: 20px;
        }
        .content.active {
            display: block; /* Show only the active content */
        }
    </style>
</head>
<body>

    <nav>
        <ul>
            <li><a href="#" class="nav-link" data-target="home">Home</a></li>
            <li><a href="#" class="nav-link" data-target="about">About</a></li>
            <li><a href="#" class="nav-link" data-target="contact">Contact</a></li>
        </ul>
    </nav>

    <section id="home" class="content active"> <!-- Default active section -->
        <h2>Home</h2>
        <p>Welcome to the homepage!</p>
    </section>
    <section id="about" class="content">
        <h2>About Us</h2>
        <p>Learn more about us here.</p>
    </section>
    <section id="contact" class="content">
        <h2>Contact</h2>
        <p>Get in touch with us!</p>
    </section>

    <script>
        document.querySelectorAll('.nav-link').forEach(link => {
            link.addEventListener('click', function(event) {
                event.preventDefault(); // Prevent default navigation
                const targetId = this.dataset.target; // Get target content ID
                
                document.querySelectorAll('.content').forEach(content => {
                    content.classList.remove('active'); // Hide all sections
                });

                document.getElementById(targetId).classList.add('active'); // Show the clicked section
            });
        });
    </script>

</body>
</html>