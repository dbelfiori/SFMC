const extractRightAndBelowUntilEmpty = (keyword) => {
  let results = [];

  for (const cellAddress in sheet) {
    if (sheet[cellAddress]?.v === keyword) {
      const columnLetter = cellAddress.match(/[A-Z]+/)[0]; // Extract column letter
      let rowNumber = parseInt(cellAddress.match(/\d+/)[0]); // Extract row number

      // Get the value to the right
      const rightColumnLetter = String.fromCharCode(
        columnLetter.charCodeAt(0) + 1
      );
      const rightCellAddress = rightColumnLetter + rowNumber;
      const rightValue = sheet[rightCellAddress]?.v || "No data found";
      results.push(rightValue); // Add right value first

      // Extract values below until an empty cell is encountered
      while (true) {
        rowNumber++; // Move to the next row
        let belowCellAddress = columnLetter + rowNumber;

        if (!sheet[belowCellAddress]?.v) break; // Stop if the cell is empty

        results.push(sheet[belowCellAddress].v);
      }
      break; // Stop after finding the first occurrence of keyword
    }
  }

  return results.length > 0 ? results.join(", ") : "No valid data found";
};

// Example usage:
document.getElementById("test1").value = extractRightAndBelowUntilEmpty("Deep Link");
