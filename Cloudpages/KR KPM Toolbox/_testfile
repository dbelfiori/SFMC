const extractRightColumnUntilEmpty = (keyword) => {
  let results = [];

  for (const cellAddress in sheet) {
    if (sheet[cellAddress]?.v === keyword) {
      const columnLetter = cellAddress.match(/[A-Z]+/)[0]; // Extract column letter
      const rowNumber = parseInt(cellAddress.match(/\d+/)[0]); // Extract row number

      // Move to the right column
      const rightColumnLetter = String.fromCharCode(
        columnLetter.charCodeAt(0) + 1
      );
      let currentRow = rowNumber;

      // Collect values in the right column until an empty cell is encountered
      while (true) {
        const rightCellAddress = rightColumnLetter + currentRow;

        if (!sheet[rightCellAddress]?.v) break; // Stop if the right cell is empty

        results.push(sheet[rightCellAddress].v);
        currentRow++; // Move down one row
      }

      break; // Stop after processing the first occurrence of keyword
    }
  }

  return results.length > 0 ? results.join(", ") : "No valid data found";
};

// Example usage:
document.getElementById("test1").value =
  extractRightColumnUntilEmpty("Deep Link");
